
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Celebration Pages
    match /celebrationPages/{pageId} {
      // Allow public read for surprise lookup via accessCode
      allow read: if true;
      
      // Creators can manage their own pages
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if isSignedIn() && resource.data.ownerId == request.auth.uid;

      // Events sub-collection
      match /birthdayEvents/{eventId} {
        // Allow public read for viewing
        allow read: if true;
        
        // Only owners can modify events
        allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
        allow update, delete: if isSignedIn() && resource.data.ownerId == request.auth.uid;
      }
    }

    // Support legacy user paths if any exist, though refactored to top-level
    match /users/{userId} {
      allow read, write: if isOwner(userId);
      match /{allPaths=**} {
        allow read, write: if isOwner(userId);
      }
    }
  }
}

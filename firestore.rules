rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * CORE PHILOSOPHY:
     * This ruleset supports a "Secret Code" access model. 
     * While creators have full ownership over their paths, recipients can read data 
     * across the database if they know the specific access code.
     */

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /** 
     * @description Collection Group rules to allow recipients to find surprises by code.
     * These rules allow "list" and "get" operations on any celebrationPages or birthdayEvents 
     * collection, regardless of the user path.
     */
    match /{path=**}/celebrationPages/{celebrationPageId} {
      allow get, list: if true; 
    }

    match /{path=**}/birthdayEvents/{birthdayEventId} {
      allow get, list: if true;
    }

    /** 
     * @description Path-based rules for creators.
     */
    match /users/{userId} {
      match /celebrationPages/{celebrationPageId} {
        allow create: if isOwner(userId) && request.resource.data.ownerId == request.auth.uid;
        allow update, delete: if isOwner(userId);

        match /birthdayEvents/{birthdayEventId} {
          allow create: if isOwner(userId) && request.resource.data.ownerId == request.auth.uid;
          allow update, delete: if isOwner(userId);
        }
        
        match /assets/{assetId} {
          allow write: if isOwner(userId);
          allow read: if true;
        }
      }
    }
  }
}
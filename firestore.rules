rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * CORE PHILOSOPHY:
     * This ruleset supports a "Secret Code" access model. 
     * Recipients can read celebration data across the database if they know the specific access code,
     * which is verified via Collection Group queries.
     */

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /** 
     * @description Collection Group rules to allow recipients to find surprises by code.
     * These rules allow "read" (get and list) operations on any celebrationPages or birthdayEvents 
     * collection, regardless of the user path.
     */
    match /{path=**}/celebrationPages/{celebrationPageId} {
      allow read: if true; 
    }

    match /{path=**}/birthdayEvents/{birthdayEventId} {
      allow read: if true;
    }

    /** 
     * @description Path-based rules for creators.
     * Owners have full access to their own user document and all sub-resources.
     */
    match /users/{userId} {
      allow read, write: if isOwner(userId);

      match /{allPaths=**} {
        allow read, write: if isOwner(userId);
      }
    }
  }
}